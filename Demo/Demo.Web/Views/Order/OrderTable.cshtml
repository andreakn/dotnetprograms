@using Demo.Web.Models
@model IList<OrderModel>

@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                @foreach (var property in OrderModel.Properties)
                {
                    <th>
                        @property.Name
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@Html.ActionLink("Se på", "See", "Order", new {id = order.OrderId}, null)</td>
                    @foreach (var property in OrderModel.Properties)
                    {
                        <td>@property.GetValue(order)</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

