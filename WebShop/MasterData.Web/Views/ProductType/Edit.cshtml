@model MasterData.Core.Model.Products.ProductTypeModel

@{
    ViewBag.Title = Model.DisplayName;
}

@using (Html.BeginForm("Edit", "ProductType", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="col-md-4">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class="form-control"})
    </div>
    <div class="col-md-4">
        @Html.LabelFor(m => m.VatRate)
        @Html.TextBoxFor(m => m.VatRate, new {@class="form-control"})
    </div>
    
    <div class="verticalSpacer clearBoth"></div>
    <button type="submit" class="btn btn-success">Save</button>
}
