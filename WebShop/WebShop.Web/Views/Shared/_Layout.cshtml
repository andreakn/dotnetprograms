@using WebShop.Web.ExtensionMethods
@using WebShop.Web.IoC
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Html.Partial("CssAndStuff")
    <title>@string.Format("WebShop - {0}", ViewBag.Title)</title>
</head>
    <body>
        <div class="page-header">
            <div class="container">
                @Html.ActionLink("WebShop", "Index", "Product")
                @Html.Partial("MiniBasket", ServiceLocator.Basket)
            </div>
        </div>
        <div class="container">
            @Html.Partial("UserMessages", TempData.GetMessages())
            @RenderBody()
        </div>
    </body>
</html>
